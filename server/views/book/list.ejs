                    </thead>

                    <tbody class="text-left align-middle">

                        <% for(let count=0; count < bookList.length; count++) { %>
                        <tr>
                            <!-- display column number -->
                            <td scope="col"><%= count+1 %></th>
                            <td class="col"><%= bookList[count].name %></td>
                            <td class="col"><%= bookList[count].author %></td>
                            <td class="col"><%= bookList[count].published %></td>
                            <td class="col"><%= bookList[count].description %></td>
                            <td class="col"><%= bookList[count].price %></td>

                            <td class="col"><a href="/book-list/edit/<%= bookList[count]._id %>" class="btn btn-primary" role="button">Edit</a></td>
                            <td class="col"><a href="/book-list/delete/<%= bookList[count]._id %>" class="btn btn-danger" role="button">Delete</a></td>
                                                        
                        </tr>
                        <% } %>

                    </tbody>

